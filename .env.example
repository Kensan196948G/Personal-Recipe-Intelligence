# Personal Recipe Intelligence - Environment Variables

# API Settings
API_HOST=127.0.0.1
API_PORT=8001
API_DEBUG=true

# Database
DATABASE_URL=sqlite:///data/db/recipes.db

# DeepL API (for translation)
# Free APIキーは末尾が ":fx" になります
DEEPL_API_KEY=your_deepl_api_key_here

# Spoonacular API (for foreign recipe collection)
# https://spoonacular.com/food-api で無料APIキーを取得
SPOONACULAR_API_KEY=your_spoonacular_api_key_here

# Recipe Collector Settings
COLLECTOR_DAILY_COUNT=5
COLLECTOR_HOUR=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Environment
NODE_ENV=development
PYTHONUNBUFFERED=1
TZ=Asia/Tokyo
