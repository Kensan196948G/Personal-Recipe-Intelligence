# Personal Recipe Intelligence - Environment Variables
# Copy this file to .env and configure your settings

# API Key for authentication (required)
# Generate a secure random key: openssl rand -hex 32
API_KEY=your_secure_api_key_here_please_change_this

# Database
DATABASE_URL=sqlite:///./data/recipes.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# OCR Settings (optional)
OCR_ENGINE=tesseract
OCR_LANG=jpn+eng

# Web Scraping
SCRAPER_TIMEOUT=30
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; PersonalRecipeIntelligence/1.0)

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Timezone
TZ=Asia/Tokyo
